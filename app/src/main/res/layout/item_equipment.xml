<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_110"
    android:layout_height="@dimen/dp_110"
    android:layout_marginStart="@dimen/dp_6"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_6"
    android:backgroundTint="@color/light_yellow"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/dp_14"
        android:paddingVertical="@dimen/dp_8">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_img_equipment"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginVertical="@dimen/dp_2"
            app:cardCornerRadius="@dimen/dp_6"
            app:cardElevation="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/img_equipment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pot"
                tools:ignore="ContentDescription"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_equipment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="marquee"
            android:maxLines="2"
            android:text="@string/pot"
            android:textAlignment="center"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_img_equipment"
            app:layout_constraintVertical_bias="0.0" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
